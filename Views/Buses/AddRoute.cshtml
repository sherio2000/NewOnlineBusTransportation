@model OnlineBusTransportation.Models.Buses

@{
    ViewData["Title"] = "Add Route Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Buses</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRoute">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" name="ID" id="ID" />

            <div class="form-group">
                <label class="control-label">Bus Name</label>
                <input asp-for="Name" readonly class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bus Number</label>
                <input asp-for="BusNumber" readonly class="form-control" />
                <span asp-validation-for="BusNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Departure</label>
                <select name="Departure" id="Departure" class="form-control" asp-items="@ViewBag.Departure"></select>

            </div>
            <div class="form-group">
                <label class="control-label">Destination</label>
                <select name="destination" id="destination"  class="form-control" asp-items="@ViewBag.Destination"></select>

            </div>
            <div class="form-group">
                <label class="control-label">Departure Date</label>
                <input type="datetime-local" name="DepartureDate" required class="form-control" id="DepartureDate" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
