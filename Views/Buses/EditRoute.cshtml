@model OnlineBusTransportation.Models.BusInfo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<h4>Bus Route</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoute" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" name="ID" id="ID" />
            <input type="hidden" asp-for="BusID" name="BusID" id="BusID" />
            <div class="form-group">
                <label class="control-label">Bus Name</label>
                @{ var busname = TempData["BusName"];}
                <input value='@busname' readonly class="form-control"  />

            </div>

            <div class="form-group">
                <label class="control-label">Bus Number</label>
                <input value='@TempData["BusNumber"]' readonly class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Departure</label>
                <select  class="form-control" id="Departure" name="Departure"  asp-items="@ViewBag.Departure"></select>

            </div>
            <div class="form-group">
                <label class="control-label">Destination</label>
                <select    class="form-control" id="Destination" name="Destination" asp-items="@ViewBag.Destination"></select>

            </div>
            <div class="form-group">
                <label class="control-label">Departure Date</label>
                <input type="datetime-local" asp-for="datetime" required class="form-control" />
                <span asp-validation-for="datetime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowRoutes" asp-route-id="@Model.BusID">Back to List</a>

    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
