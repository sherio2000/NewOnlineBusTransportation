@model OnlineBusTransportation.Models.BusInfo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this route?</h3>
<div>
    <h4>Route</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bus Name:
        </dt>
        <dd class="col-sm-10">
            @TempData["BusName"]

        </dd>
        <dt class="col-sm-2">
            Bus Number:
        </dt>
        <dd class="col-sm-10">
            @TempData["BusNumber"]

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
    </dl>

    <form asp-action="RouteDeleteConfirmed">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="BusID" />

        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ShowRoutes" asp-route-id="@Model.BusID">Back to List</a>
    </form>
</div>
