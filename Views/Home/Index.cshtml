@using Microsoft.AspNetCore.Identity
@using OnlineBusTransportation.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}

<div class="container">
    @if (User.Identity.IsAuthenticated)
    {
        <br />
        <h3>Welcome @UserManager.GetUserName(User)!</h3>
        <br />
        <br />
    }
    else
    {
        <div class="col-md-5 bann-info1 wow fadeInLeft animated" data-wow-delay=".5s">
            <i class="fa fa-columns"></i>
            <h3>WORLD'S MOST TRAVEL BRAND</h3>
        </div>
        <div class="col-md-7 bann-info wow fadeInRight animated" data-wow-delay=".5s">

            <form method="post" asp-action="SearchBuses" asp-controller="Bus">

                <h2>Online Tickets with Zero Booking Fees</h2>
                <div class="ban-top">
                    <div class="bnr-left">
                        <label class="inputLabel">Departure</label>
                       
                        <select name="Departure" id="Departure" class="form-control" asp-items="@ViewBag.Departure"></select>

                    </div>
                    <div class="bnr-left">

                        <label class="inputLabel">Destination</label>
                        <select name="destination" id="destination" class="form-control" asp-items="@ViewBag.Destination"></select>

                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="ban-bottom">
                    <div class="bnr-right">
                        <label class="inputLabel">Date of Journey</label>
                        <input class="form-control" id="datepicker" name="datepicker" type="datetime-local"  />

                        
                        @* <input class="date" id="datepicker" name="datepicker" type="text" value="dd/mm/yyyy" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'dd/mm/yyyy';}" required=>*@
                    </div>
                    <div class="clearfix"></div>
                    <!---start-date-piker---->
                    <link rel="stylesheet" href="css/jquery-ui.css" />
                    <script src="js/jquery-ui.js"></script>
                    <script>
                        $(function () {
                            $("#datepicker,#datepicker1").datepicker({ dateFormat: 'dd/mm/yy' }).val();
                        });</script>
                    <!---/End-date-piker---->
                </div>
                <div class="sear">
                    <button class="seabtn" type="submit">Search Buses</button>
                </div>

            </form>

        </div>
    }
    <div class="clearfix"></div>
</div>
